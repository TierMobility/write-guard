{
  "name": "write-guard",
  "version": "0.0.1",
  "description": "Enforce file level write access for monorepos",
  "main": "index.js",
  "scripts": {
    "test": "mocha 'src/**/*.test.js' --exclude 'src/**/*.integration.test.js'",
    "test:watch": "npm run test -- --watch",
    "test:integration": "mocha 'src/**/*.integration.test.js'",
    "test:ci": "nyc --reporter=lcov mocha 'src/**/*.test.js'",
    "posttest": "npm run lint",
    "build": "ncc build src/index.js",
    "lint": "eslint . --config .eslintrc"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/geritol/write-guard.git"
  },
  "keywords": [
    "access-control",
    "github-action"
  ],
  "author": "Gergo Tolnai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geritol/write-guard/issues"
  },
  "homepage": "https://github.com/geritol/write-guard#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.0.1",
    "mock-fs": "^4.12.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2"
  },
  "dependencies": {
    "@octokit/graphql": "^4.5.1",
    "@octokit/rest": "^18.0.0",
    "dotenv": "^8.2.0",
    "git-branch": "^2.0.1",
    "js-yaml": "^3.14.0",
    "lodash.uniq": "^4.5.0",
    "micromatch": "^4.0.2"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
